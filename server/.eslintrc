{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "jest": true,
  },
  "rules": {
    "semi": 0,
    "linebreak-style": 0,
    "func-names": "off",
    "space-before-function-paren": ["error", "never"],
    "max-len": ["error", 120, 4],
    "no-unused-vars": ["error", {"argsIgnorePattern": "next"}],
    "import/prefer-default-export": "off",
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "functions": "ignore"
    }]
  }
}
